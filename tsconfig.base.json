{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@calorie-tracker/api-shell/auth": ["libs/api-shell/auth/src/index.ts"],
      "@calorie-tracker/api-shell/prisma": [
        "libs/api-shell/prisma/src/index.ts"
      ],
      "@calorie-tracker/app-shell": ["libs/app-shell/src/index.ts"],
      "@calorie-tracker/components": ["libs/components/src/index.ts"],
      "@calorie-tracker/types": ["libs/types/src/index.ts"],
      "@calorie-tracker/ui": ["libs/ui/src/index.ts"],
      "@calorie-tracker/ui/server": ["libs/ui/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
