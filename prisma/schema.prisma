generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uuid       String   @id @default(uuid())
  email      String   @unique
  first_name String
  last_name  String
  password   String
  username   String   @unique
  agenda     Agenda[]
  created_at DateTime @default(now())
}

model Food {
  uuid       String         @id @default(uuid())
  name       String
  picture    String
  calories   Float
  fat        Float
  protein    Float
  carbs      Float
  meals      FoodsOnMeals[]
  created_at DateTime       @default(now())
}

model Meal {
  uuid        String         @id @default(uuid())
  name        String
  created_at  DateTime       @default(now())
  foods       FoodsOnMeals[]
  agenda      Agenda         @relation(fields: [agenda_uuid], references: [uuid])
  agenda_uuid String
}

model FoodsOnMeals {
  uuid       String   @id @default(uuid())
  food       Food     @relation(fields: [food_uuid], references: [uuid])
  food_uuid  String
  meal       Meal     @relation(fields: [meal_uuid], references: [uuid])
  meal_uuid  String
  created_at DateTime @default(now())
}

model Agenda {
  uuid       String   @id @default(uuid())
  created_at DateTime @default(now())
  user       User     @relation(fields: [user_uuid], references: [uuid])
  user_uuid  String
  meal       Meal[]
}
